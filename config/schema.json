{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Metadata",
    "type": "object",
    "required": [
        "version",
        "basePath",
        "functions",
        "globalVariables"
    ],
    "properties": {
        "version": {
            "type": "integer",
            "minimum": 1
        },
        "basePath": {
            "type": "string"
        },
        "projectName": {
            "type": "string"
        },
        "generatedAt": {
            "type": "string"
        },
        "functions": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["qualifiedName", "location", "module", "parameters", "calledBy", "calls"],
                "properties": {
                    "name": {"type": "string"},
                    "qualifiedName": {"type": "string"},
                    "location": {
                        "type": "object",
                        "properties": {
                            "file": {"type": "string"},
                            "line": {"type": "integer"},
                            "endLine": {"type": "integer"}
                        }
                    },
                    "module": {"type": "string"},
                    "params": {"type": "array"},
                    "calledBy": {"type": "array"},
                    "calls": {"type": "array"}
                }
            }
        },
        "globalVariables": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["name", "location", "module", "type"],
                "properties": {
                    "name": {"type": "string"},
                    "qualifiedName": {"type": "string"},
                    "location": {
                        "type": "object",
                        "properties": {
                            "file": {"type": "string"},
                            "line": {"type": "integer"}
                        }
                    },
                    "module": {"type": "string"},
                    "type": {"type": "string"}
                }
            }
        }
    }
}